---
// Debug page to check environment variables
const envCheck = {
  WORDPRESS_URL: import.meta.env.WORDPRESS_URL || 'NOT SET',
  hasWordPress: !!import.meta.env.WORDPRESS_URL,
  nodeEnv: import.meta.env.MODE,
  buildTime: new Date().toISOString(),
  cacheCleared: true,
  deployTrigger: Date.now(),
  h1Fixed: true,
  footerUpdated: true,
};

let wpTest = null;
if (import.meta.env.WORDPRESS_URL) {
  try {
    const response = await fetch(import.meta.env.WORDPRESS_URL, {
      method: "POST",
      headers: { "Content-Type": "application/json", "User-Agent": "StartupYeti/1.0 (Astro Static Site Generator)" },
      body: JSON.stringify({
        query: `query { posts(first: 1) { nodes { title } } }`
      }),
    });
    wpTest = {
      status: response.status,
      ok: response.ok,
      data: await response.json()
    };
  } catch (error) {
    wpTest = {
      error: error.message
    };
  }
}
