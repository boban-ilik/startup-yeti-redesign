        <div class="absolute bottom-20 left-20 w-64 h-64 bg-orange-500/10 rounded-full blur-[120px]"></div>

        <div class="max-w-5xl mx-auto text-center relative z-10">
          <div class="inline-flex items-center gap-2 py-2 px-5 rounded-full glass border-slate-200 dark:border-slate-700 shadow-lg text-slate-700 dark:text-slate-300 text-xs font-bold uppercase tracking-widest mb-8">
