// src/pages/blog/index.astro
// Blog listing page

const WORDPRESS_URL = import.meta.env.WORDPRESS_URL || "https://YOUR-WORDPRESS-SITE.com/graphql";

let posts = [];
let allCategories = [];

// Only fetch if WordPress is configured
if (import.meta.env.WORDPRESS_URL && !WORDPRESS_URL.includes('YOUR-WORDPRESS-SITE')) {
  try {
    const response = await fetch(WORDPRESS_URL, {
      method: "POST",
      headers: { "Content-Type": "application/json" },
      body: JSON.stringify({
        query: `
          query GetAllPosts {
            posts(first: 100, where: {orderby: {field: DATE, order: DESC}}) {
              nodes {
                slug
                title
                excerpt
                date
                featuredImage {
                  node {
                    sourceUrl
                    altText
                  }
                }
                author {
                  node {
                    name
                  }
                }
                categories {
                  nodes {
                    name
                    slug
                  }
                }
              }
            }
          }
        `,
      }),
    });

    const { data } = await response.json();

    if (data?.posts?.nodes) {
      posts = data.posts.nodes;
      // Get unique categories
      allCategories = [...new Set(posts.flatMap(post => post.categories.nodes.map(cat => cat.name)))];
    }
  } catch (error) {
    console.error('Error fetching WordPress posts:', error);
    // Posts remain empty array, page will show "no posts" message
  }
} else {
  console.warn('WordPress URL not configured. Blog page will show no posts.');
}
---

<!doctype html>
<html lang="en" class="scroll-smooth">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <title>Blog | Startup Yeti - The Founder's Guide to Remote Teams</title>
    <meta name="description" content="Tactical advice for modern founders. Learn how to build, manage, and scale remote teams with proven frameworks." />

    <link rel="preconnect" href="https://fonts.googleapis.com">
