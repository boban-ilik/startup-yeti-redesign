const year = new Date().getFullYear();

// Fetch recent blog posts from WordPress
const WORDPRESS_URL = import.meta.env.WORDPRESS_URL || "https://YOUR-WORDPRESS-SITE.com/graphql";

let posts = [];

// Only fetch if WordPress is configured
if (import.meta.env.WORDPRESS_URL && !WORDPRESS_URL.includes('YOUR-WORDPRESS-SITE')) {
  try {
    const response = await fetch(WORDPRESS_URL, {
      method: "POST",
      headers: {
        "Content-Type": "application/json",
        "User-Agent": "StartupYeti/1.0 (Astro Static Site Generator)"
      },
      body: JSON.stringify({
        query: `
          query GetRecentPosts {
            posts(first: 3, where: {orderby: {field: DATE, order: DESC}}) {
              nodes {
                slug
                title
                excerpt
                date
                featuredImage {
                  node {
                    sourceUrl
                    altText
                  }
                }
                categories {
                  nodes {
                    name
                    slug
                  }
                }
              }
            }
          }
        `,
      }),
    });

    const { data } = await response.json();
    posts = data?.posts?.nodes || [];
  } catch (error) {
    console.error("Error fetching WordPress posts:", error);
    // posts will remain empty array if fetch fails
  }
} else {
  console.warn('WordPress URL not configured. Homepage will show no blog posts.');
}

// Helper function to calculate reading time
function calculateReadingTime(excerpt: string) {
  const words = excerpt.replace(/<[^>]*>/g, '').split(/\s+/).length;
  return Math.max(1, Math.ceil(words / 200)); // Assume 200 words per minute
}

// Helper function to get category color scheme
function getCategoryColors(categorySlug: string) {
  const colorMap = {
    business: { bg: 'from-yeti-100 via-blue-50 to-cyan-50', border: 'border-yeti-300', text: 'text-yeti-700', icon: 'text-yeti-600', hover: 'hover:border-yeti-200' },
    marketing: { bg: 'from-purple-100 via-pink-50 to-purple-50', border: 'border-purple-300', text: 'text-purple-700', icon: 'text-purple-600', hover: 'hover:border-purple-200' },
    'remote-work': { bg: 'from-green-100 via-emerald-50 to-teal-50', border: 'border-green-300', text: 'text-green-700', icon: 'text-green-600', hover: 'hover:border-green-200' },
    productivity: { bg: 'from-orange-100 via-yellow-50 to-orange-50', border: 'border-orange-300', text: 'text-orange-700', icon: 'text-orange-600', hover: 'hover:border-orange-200' },
    default: { bg: 'from-slate-100 via-slate-50 to-slate-50', border: 'border-slate-300', text: 'text-slate-700', icon: 'text-slate-600', hover: 'hover:border-slate-200' }
  };
  return colorMap[categorySlug] || colorMap.default;
}
