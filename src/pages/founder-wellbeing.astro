// src/pages/founder-wellbeing.astro
// Founder Wellbeing category landing page

const WORDPRESS_URL = import.meta.env.WORDPRESS_URL || "https://YOUR-WORDPRESS-SITE.com/graphql";
const categorySlug = "founder-wellbeing";
const categoryName = "Founder Wellbeing";

let posts = [];

// Fetch posts from this category
if (import.meta.env.WORDPRESS_URL && !WORDPRESS_URL.includes('YOUR-WORDPRESS-SITE')) {
  try {
    const response = await fetch(WORDPRESS_URL, {
      method: "POST",
      headers: { "Content-Type": "application/json", "User-Agent": "StartupYeti/1.0 (Astro Static Site Generator)" },
      body: JSON.stringify({
        query: `
          query GetCategoryPosts($categoryName: String!) {
            posts(first: 100, where: {categoryName: $categoryName, orderby: {field: DATE, order: DESC}}) {
              nodes {
                slug
                title
                excerpt
                date
                featuredImage {
                  node {
                    sourceUrl
                    altText
                  }
                }
                author {
                  node {
                    name
                  }
                }
                categories {
                  nodes {
                    name
                    slug
                  }
                }
              }
            }
          }
        `,
        variables: { categoryName }
      }),
    });

    const { data } = await response.json();
    if (data?.posts?.nodes) {
      posts = data.posts.nodes;
    }
  } catch (error) {
    console.error('Error fetching WordPress posts:', error);
  }
}

// Helper function to calculate reading time
function calculateReadingTime(excerpt: string) {
  const words = excerpt.replace(/<[^>]*>/g, '').split(/\s+/).length;
  return Math.max(1, Math.ceil(words / 200));
}
